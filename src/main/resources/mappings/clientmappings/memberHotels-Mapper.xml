<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="client.hotels.dao.MemberHotelsDAO">

<select id="getHotelsCode">
	SELECT HOTELS_SEQ.NEXTVAL FROM DUAL 
</select>

<insert id="insertHotels" parameterType="memberHotels">
	INSERT INTO hotels 
	VALUES(#{hotelsCode} #{hotelsName}, #{hotelsType}, #{memberNo}, 
	#{hotelsPhone}, #{hotelsZipcode}, #{hotelsAddress1}, #{hotelsAddress2},
	#{hotelsPath}, #{hotelsInfo}, #{hotelsIntroduce},)
</insert>

<insert id="inserSortType" parameterType="memberRoomSort">
	INSERT INTO hotels 
	VALUES(#{hotelsCode} #{sortType}, #{sortStandardCnt}, #{sortMaxCnt}, 
	#{sortRoomCnt}, #{sortStandardPrice}, #{sortHolidayPrice}, #{sortAddPrice},
	#{sortRoomInfo})
</insert>

</mapper>
